<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="?attr/colorPrimarySurface"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <TextView
            android:id="@+id/itemDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimarySurface"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/itemSize"
            app:layout_constraintEnd_toStartOf="@+id/itemAvgWeight"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimarySurface"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/itemDate"
            app:layout_constraintStart_toStartOf="@+id/itemDate"
            app:layout_constraintTop_toBottomOf="@+id/itemDate" />

        <TextView
            android:id="@+id/itemAvgWeight"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimarySurface"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/itemMinMaxWeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemDate"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemMinMaxWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimarySurface"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/itemAvgWeight"
            app:layout_constraintStart_toStartOf="@+id/itemAvgWeight"
            app:layout_constraintTop_toBottomOf="@+id/itemAvgWeight" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>